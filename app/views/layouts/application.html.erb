<!DOCTYPE html>
<html>
	<head>
	  <title>Cards</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	  <%= favicon_link_tag 'icon_screen.png' %>
	</head>
	<body>

		<nav class="navbar navbar-inverse">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>                        
		      </button>
		      <a class="navbar-brand" href="#">Samir Cards</a>
		    </div>
		     <div class="collapse navbar-collapse" id="myNavbar">
		      <ul class="nav navbar-nav">
		        <li class="active"><%= link_to "My Profile", root_path %></li>
		        <li class="dropdown">
		          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Show Me <span class="caret"></span></a>
		          <ul class="dropdown-menu">
		            <li><%= link_to "Employees", employees_path %></li>
		            <li><%= link_to "Clients", clients_path %></li>
		          </ul>
		        </li>
		        <% if user_signed_in? %>
		        	<li><%= link_to "My Cards", cards_path, user_id: current_user.id %></li>
		        <% end %>
		      </ul> 
		      <ul class="nav navbar-nav navbar-right">
		      	<% if user_signed_in? %>
		      		<li>
			      		<%= link_to employee_path(current_user) do%>
				      			<span class="glyphicon glyphicon-user"></span> <%= current_user.email %>
				      	<% end %>
				    </li>
		      		<li>
			      		<%= link_to destroy_user_session_path , method: :delete do%>
			      			<span class="glyphicon glyphicon-log-out"></span> Logout
			      		<% end %>
		      		</li>
		      	<% else %>

		        	<li>
			        	<%= link_to admin_root_path do %>
			        		<span class="glyphicon glyphicon-log-in"></span> Login Admin
			        	<% end %>
		        	</li>
		      	<% end %>
		      </ul>
		    </div>
		  </div>
		</nav>
		<%if(notice)%>
			<%if(notice.kind_of?(Array))%>
				<% if notice.first == "You need to sign in or sign up before continuing." %>
					<div class="alert alert-info" role="alert"><%= notice.first %></div>
				<% else %>
					<% notice.each do |n| %>
						<div class="alert alert-info" role="alert"><%= n %></div>
					<% end %>
				<% end %>
			<% else %>
				<div class="alert alert-info" role="alert" id = "notice"><%= notice %></div>
	    	<% end %>
	    <% end %>
	    
	    <%if(alert)%>
			<%if(alert.kind_of?(Array))%>
				<% if alert.first.eql? "You need to sign in or sign up before continuing." %>
					<div class="alert alert-info" role="alert"><%= alert.first %></div>
				<% else %>
					<% alert.each do |a| %>
						<div class="alert alert-info" role="alert"><%= a %></div>
					<% end %>
				<% end %>
			<% else %>
				<div class="alert alert-info" role="alert"><%= alert %></div>
	    	<% end %>
	    <% end %>
		<%= yield %>

		<footer class="footer-distributed">

			<div class="footer-left">
				
				<p class="footer-company-name">Ebrahim-Elgaml &copy; 2015</p>
			</div>
			<div class="footer-center">

				<div>
					<i class="fa fa-phone"></i>
					<p>+2 01221838455</p>
				</div>
				<div>
					<i class="fa fa-envelope"></i>
					<p><a href="mailto:support@company.com">ebrahim.m.elgaml@ieee.org</a></p>
				</div>
			</div>
			<div class="footer-right">
				<p class="footer-company-about">
					<span>Done by Ebrahim-Elgaml</span>
				</p>
				<div class="footer-icons">
					<a href="https://www.linkedin.com/profile/view?id=AAIAABU5QngB3WCgibMYW_hk28DXfIWBumsSBYk&trk=nav_responsive_tab_profile"><i class="fa fa-linkedin"></i></a>
					<a href="https://github.com/ebrahim-elgaml"><i class="fa fa-github"></i></a>
				</div>

			</div>

		</footer>

	</body>
</html>
